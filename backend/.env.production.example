# ─────────────────────────────────────────────────────────────────
#  FleetFlow Backend — PRODUCTION ENV TEMPLATE
#  Copy this to .env.production and fill in real values.
#  .env.production is gitignored — this file is safe to commit.
# ─────────────────────────────────────────────────────────────────

NODE_ENV=production
PORT=5000

# Supabase — Transaction pooler (runtime queries via pgBouncer)
DATABASE_URL="postgresql://postgres.SUPABASE_PROJECT_REF:PASSWORD@aws-REGION.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1"

# Supabase — Direct connection (Prisma migrations only)
DIRECT_URL="postgresql://postgres:PASSWORD@db.SUPABASE_PROJECT_REF.supabase.co:5432/postgres"

# JWT — generate strong secrets: `openssl rand -hex 64`
JWT_SECRET="REPLACE_WITH_STRONG_SECRET"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="REPLACE_WITH_STRONG_REFRESH_SECRET"
JWT_REFRESH_EXPIRES_IN="30d"

# CORS — your Vercel frontend URL
CORS_ORIGINS="https://your-app.vercel.app"

BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# SMTP (optional)
SMTP_FROM="FleetFlow <alerts@fleetflow.io>"
SMTP_ALERT_TO="manager@fleetflow.io"
